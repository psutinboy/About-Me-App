<Page actionBarHidden="true" loaded="onLoaded">
    <GridLayout rows="auto,*,auto" columns="*,*,*">
        <StackLayout column="0" row="0">
            <Image src="https://img.icons8.com/fluency-systems-filled/96/home-screen.png" tap="goBackToHome" class="home" />
        </StackLayout>
        <StackLayout column="1" row="0">
            <Label text="Contact" class="label" />
        </StackLayout>
        <StackLayout row="1" colSpan="3" class="">
            <ScrollView orientation="vertical">
                <StackLayout class="text-20 p-10">
                    <TextField hint="Name *" maxLength="25" class="" id="nameField" />
                    <TextField hint="Email Address *" class="pt-20" id="emailField" keyboardType="email"/>
                    <TextField hint="Phone Number" maxLength="10" class="pt-20" id="numberField" keyboardType="number"/>
                    <TextField hint="Reason For Contact *" maxLength="20" class="pt-20" id="reasonField" />
                    <TextField hint="Message *" maxLength="2000" class="pt-20" textWrap="true" id="messageField" />
                    <Button text="Submit" tap="submitForm" class="submit rounded-2xl" />
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </GridLayout>
</Page>
