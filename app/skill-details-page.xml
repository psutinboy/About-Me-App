<Page actionBarHidden="true" loaded="pageLoaded">
    <GridLayout rows="auto,*,auto" columns="*,*,*">
        <StackLayout row="0" colSpan="3">
            <Label text="Skill Details" class="label" />
        </StackLayout>
        <ScrollView row="1" colSpan="3">
            <StackLayout>
                <Label text="{{ name }}" class="text-lg text-center" />
                <Label text="{{ description }}" class="text-lg text-center leading-loose mx-3" textWrap="true" />
            </StackLayout>
        </ScrollView>
        <StackLayout class="footer" row="2" colSpan="3">
            <Button class="next" text="Back" tap="goBack" />
        </StackLayout>
    </GridLayout>
</Page>
