<Page actionBarHidden="true" loaded="onLoaded">
    <GridLayout rows="auto,*,auto" columns="*,*,*">
        <StackLayout column="0" row="0">
            <image src="https://img.icons8.com/fluency-systems-filled/96/home-screen.png" tap="goBackToHome" class="home" />
        </StackLayout>
        <StackLayout column="1" row="0">
            <Label text="Bio" class="label" />
        </StackLayout>
        <StackLayout row="1" colSpan="3">
            <ScrollView orientation="vertical">
                <StackLayout class="w-screen h-auto">
                    <Image src="~/images/me.png" class="w-24 h-26 flex items-center m-5 rounded-2xl" />
                    <Label textWrap="true" class="text-30 text-center pb-10" text="Grant Ledbetter" />
                    <Label textWrap="true" class="text-18 px-25 leading-loose" text="I am currently enrolled at Pittsburg State University, majoring in computer science and pursuing a minor in mathematics." />
                    <Label textWrap="true" class="text-18 px-25 mt-5 leading-loose" text="I hold an associate's degree in information technology, specializing in cybersecurity, and have consistently maintained a flawless 4.0 GPA." />
                    <Label textWrap="true" class="text-18 px-25 mt-5 leading-loose" text="My professional experience includes serving as a network engineer at Converge One and interning within the technology department at Circle Unified School District." />
                </StackLayout>
            </ScrollView>
        </StackLayout>
        <StackLayout class="footer" row="2" column="0">
        <button class="next" text="Back" tap="goBack" />
        </StackLayout>
        <StackLayout class="footer" row="2" column="3">
             <button class="next" text="Next" tap="navigateToNext" />
        </StackLayout>
    </GridLayout>
</Page>
